<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:GameboyPiManager.Views.Resources"
                    xmlns:viewModels="clr-namespace:GameboyPiManager.ViewModels">

    <HierarchicalDataTemplate x:Key="VideogameConsoleTreeViewItem" DataType="{x:Type viewModels:VideogameConsoleViewModel}" ItemsSource="{Binding GamesVMs}">
        <Grid>
            <TextBlock Text="{Binding Name}"/>
        </Grid>
    </HierarchicalDataTemplate>

    <DataTemplate DataType="{x:Type viewModels:VideogameViewModel}">
        <Grid>
            <TextBlock Text="{Binding Name}"/>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu>
                                <MenuItem Header="Remove Game" Command="{Binding RemoveCmd}"/>
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Style>
        </Grid>
    </DataTemplate>
</ResourceDictionary>